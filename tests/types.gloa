-- [[ Blocks.
--------------------------------

local blocks :: () {
	local answer:int = 42
	answer = answer+1

	blocks()

	local returnArg :: (a:int) -> int { return a }
	returnArg(5)

	-- Lexical visibility.
	do {
		do {
			local blockVar = 1
		}
		local blockVar = 2
	}
	local blockVar = 3

	inner()
	local inner :: () {} -- Constants have higher visibility than dynamic variables.
}

