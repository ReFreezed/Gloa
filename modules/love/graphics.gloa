-- Texture.
export LoveTexture :: struct { using LoveDrawable }

export loveGetDepth      :: (texture:LoveTexture) -> int !foreign method "getDepth"
export loveGetLayerCount :: (texture:LoveTexture) -> int !foreign method "getLayerCount"

export loveGetDepthSampleMode :: (texture:LoveTexture) -> (modeIsSet:bool, b:LoveCompareMode) {
	local getDepthSampleMode :: (texture:LoveTexture) -> LoveCompareMode|none !foreign method "getDepthSampleMode"

	local mode = getDepthSampleMode(texture)
	if mode == nil  return false, LoveCompareMode.EQUAL

	return true, cast(LoveCompareMode)mode
}
export loveSetDepthSampleMode    :: (texture:LoveTexture, mode:LoveCompareMode) !foreign method "setDepthSampleMode"
export loveRemoveDepthSampleMode :: (texture:LoveTexture)                       !foreign method "setDepthSampleMode"

export loveGetDimensions :: (texture:LoveTexture) -> int, int !foreign method "getDimensions"
export loveGetWidth      :: (texture:LoveTexture) -> int      !foreign method "getWidth"
export loveGetHeight     :: (texture:LoveTexture) -> int      !foreign method "getHeight"

export loveGetPixelDimensions :: (texture:LoveTexture) -> int, int !foreign method "getPixelDimensions"
export loveGetPixelWidth      :: (texture:LoveTexture) -> int      !foreign method "getPixelWidth"
export loveGetPixelHeight     :: (texture:LoveTexture) -> int      !foreign method "getPixelHeight"

export loveGetFilter :: (texture:LoveTexture) -> (min,mag:LoveFilterMode, anisotropy:int) !foreign method "getFilter"
export loveSetFilter :: (texture:LoveTexture, min,mag:LoveFilterMode, anisotropy=1)       !foreign method "setFilter"

export loveGetMipmapCount :: (texture:LoveTexture) -> int !foreign method "getMipmapCount"

export loveGetMipmapFilter :: (texture:LoveTexture) -> (hasFilter:bool, mode:LoveFilterMode, sharpness:float) {
	local getMipmapFilter :: (texture:LoveTexture) -> (mode:LoveFilterMode|none, sharpness:float) !foreign method "getMipmapFilter"

	local mode, sharpness = getMipmapFilter(texture)
	if mode == nil  return false, LoveFilterMode.LINEAR, 0

	return true, cast(LoveFilterMode)mode, sharpness
}
export loveSetMipmapFilter    :: (texture:LoveTexture, mode:LoveFilterMode, sharpness=0.0) !foreign method "setMipmapFilter"
export loveRemoveMipmapFilter :: (texture:LoveTexture)                                     !foreign method "setMipmapFilter"

